<script type="text/javascript">
    var svgPath = "../../images/SVGs/CountyMap.svg";

    d3.xml(svgPath, "image/svg+xml", function(xml) {
        document.body.appendChild(xml.documentElement);
        visualize();        

    });

    function visualize() {

        var svg = d3.select("svg");


  
            svg.selectAll("path")
               .each(function(d, i) { 
                   d3.select(this)
                       .transition()
                       .duration(i*17)
                       .style("fill","red")       
                }); 
  
    }

</script>


